NAME: /[a-zA-Z][a-zA-Z0-9-_]*/

?require_key: TYPING
            | STRIPS
            | EQUALITY
            | NON_DETERMINISTIC
            | NEG_PRECONDITION
            | DIS_PRECONDITION
            | EXISTENTIAL_PRECONDITIONS
            | UNIVERSAL_PRECONDITIONS
            | QUANTIFIED_PRECONDITIONS
            | ADL
            | DERIVED_PREDICATES
            | CONDITIONAL_EFFECTS
            | NUMERIC_FLUENTS
            | FLUENTS
            | ACTION_COSTS

COMMENT: /;[^\n]*/

